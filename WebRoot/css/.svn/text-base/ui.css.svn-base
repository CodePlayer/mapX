@CHARSET "UTF-8";
/*******************UI 公共默认样式 *********************/
/*按钮*/
.ui-button{
}

/*输入文本框*/
.ui-text{
	
}
/*链接*/
a{
    color: #07519A;
    text-decoration: none;
}
a:hover {
    color: #CC3300;
    text-decoration: underline;
}

/**************UI [返回顶部]按钮**********/
.ui-backtop {
	filter: alpha(opacity = 50); /*兼容IE*/
	_position:absolute; /*兼容IE6*/ 
	-moz-transition: opacity 0.3s ease-in 0s, opacity 0.3s ease-out 0s; /*兼容FF*/
	background:
		url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAEMAAAANAgMAAACP9jv8AAAACVBMVEX///////8AAACO9MPsAAAAAXRSTlMAQObYZgAAAGhJREFUeF49zsEJwCAMBdBvoRfvWaJTOEIPZp+O4lEyZcn/RIl+SMJDAG2gTlfc7+k8H8Pm6cRiuFfjip3RphXUV4ghJIaQjVZQoCfkLDI7C7kgiAuRDK+YvJwLQnBPhovRw7ER5of3DyPbFp8RB9axAAAAAElFTkSuQmCC")
		no-repeat scroll 18px 21px #000000;
	bottom: 50px;
	cursor: pointer;
	display: block;
	height: 60px;
	opacity: 0.5; /*兼容W3C浏览器*/
	overflow: hidden;
	position: fixed;
	right: 10px;
	text-indent: -999999px;
	width: 60px;
}

.ui-backtop:hover {
	filter: alpha(opacity = 100); /*兼容IE*/
	_position:absolute; /*兼容IE6*/  
	-moz-transition: opacity 0.3s ease-in 0s, opacity 0.3s ease-out 0s; /*兼容FF*/
	opacity: 1; /*兼容W3C浏览器*/
}

/*******************UI [表格]样式***********************/
.ui-table{
	font-family:"Courier New","宋体";
	font-size: 13px;
	line-height: 1.3em;
	width:100%;
	margin:0px;
	padding:0px;	/*设置cellpadding*/
	text-align:center;
	border: 1px solid #4874CC;
	border-collapse:collapse;	/*设置cellspacing,去除双倍边框*/	
}

/*表格大标题*/
.ui-table caption {
    font-size: 1.1em;
	font-family: Verdana,​Arial,​Helvetica,​sans-serif;
	text-align:left;
    border: 1px solid #4874CC; 
    margin: 5px auto 0px;
    padding: 4px 0px;
    text-indent: 0.5em;
    white-space: nowrap;
	background: url("../image/table_head_bg.gif");	
}

/*表格标题列单元格*/
.ui-table th{
	font-size: 12pt;
	font-weight:500;
	background:#FFF;
	border: 1px solid #4874CC; 
}

/*表格内容单元格*/
.ui-table td{
	border: 1px solid #4874CC; 
}

/*表格标题行*/
.ui-table tr.tr-head{
	background: #898989;
}

/*奇数行*/
.ui-table tr.odd{
	background: #EFF;
}
.ui-table tr.odd:hover{
	background: #FC9;
}

/*偶数行*/
.ui-table tr.even{
	background: #FFC;	
}
.ui-table tr.even:hover{
	background: #FC9;
}

/*表格操作栏单元格*/
.ui-table .td-action{
	
}

/*表格数据分页状态栏DIV*/
.ui-table-widget{
	width:100%;
	font-size: 12px;
	line-height: 1.2em;
	font-family: "Courier New","宋体";	
	text-align: right;
	background: #EFEFEF;
}

/*表格数据分页状态栏文字和链接*/
.ui-table-widget span,.ui-table-widget a{
	padding-right: 0.9em;
}

/*表格及表格状态栏中的链接*/
.ui-table-widget a, .ui-table a{
    color: #07519A;
    text-decoration: none;
}
.ui-table-widget a:hover, .ui-table a:hover {
    color: #CC3300;
    text-decoration: underline;
}

/*操作栏链接*/
.td-action a{
	/*继承表格链接样式*/
}

/*操作栏按钮*/
.td-action .ui-button{
	background: #9CF;
}
.td-action .ui-button:hover{
	background: #CFF;
}

/*[跳转到] 按钮*/
.ui-table-widget .ui-button{
	background: #eee;
}

/*表格翻页输入框*/
.ui-table-widget .ui-text{
	margin: auto 2px;
	width: 2.5em;
	height: 0.9em;	
}
	
/*表格全局操作按钮DIV*/
.ui-table-action{
	width:100%;
	padding:5px;
	text-align: center;
}
.ui-table-action .ui-button{
	background: #eee;
}	

